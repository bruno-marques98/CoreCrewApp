@model CoreCrewApp.Models.AuditLog

@{
    ViewData["Title"] = "Delete Audit Log";
}

<h2>Delete Audit Log</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>AuditLog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Action
        </dt>
        <dd class="col-sm-10">
            @Model.Action
        </dd>
        <dt class="col-sm-2">
            TableName
        </dt>
        <dd class="col-sm-10">
            @Model.TableName
        </dd>
        <dt class="col-sm-2">
            Record ID
        </dt>
        <dd class="col-sm-10">
            @Model.RecordID
        </dd>
        <dt class="col-sm-2">
            UserName
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            Timestamp
        </dt>
        <dd class="col-sm-10">
            @Model.Timestamp.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Details
        </dt>
        <dd class="col-sm-10">
            @Model.Details
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AuditLogID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="@Url.Action("Index", "AuditLog")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
