@model CoreCrewApp.Models.EmployeeBenefit

@{
    ViewData["Title"] = "Edit Employee Benefit";
}

<h2>Edit Employee Benefit</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="EmployeeID" />
    <input type="hidden" asp-for="BenefitID" />
    <div class="form-group">
        <label asp-for="EmployeeID" class="control-label">Employee</label>
        <p class="form-control-static">@Model.Employee?.FirstName @Model.Employee?.LastName</p>
    </div>
    <div class="form-group">
        <label asp-for="BenefitID" class="control-label">Benefit</label>
        <p class="form-control-static">@Model.Benefit?.Name</p>
    </div>
    <div class="form-group">
        <label asp-for="EnrollmentDate" class="control-label">Enrollment Date</label>
        <input asp-for="EnrollmentDate" class="form-control" />
        <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<a href="@Url.Action("Index", "EmployeeBenefit")" class="btn btn-secondary">Back to List</a>
