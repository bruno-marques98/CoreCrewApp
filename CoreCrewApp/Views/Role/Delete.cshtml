@model CoreCrewApp.Models.Role

@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>

<h3>Are you sure you want to delete this role?</h3>

<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Role Name</dt>
        <dd class="col-sm-10">@Model.RoleName</dd>
