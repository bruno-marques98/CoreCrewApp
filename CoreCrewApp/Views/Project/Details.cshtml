@model CoreCrewApp.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<h1>Project Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Project Name</dt>
        <dd class="col-sm-10">@Model.ProjectName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("d")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate?.ToString("d") ?? "Ongoing"</dd>

        <dt class="col-sm-2">Manager</dt>
        <dd class="col-sm-10">@Model.Manager?.FirstName @Model.Manager?.LastName</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.ProjectID" class="btn btn-primary">Edit</a> |
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
