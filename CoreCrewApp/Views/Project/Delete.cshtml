@model CoreCrewApp.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<h1>Delete Project</h1>

<h3>Are you sure you want to delete this project?</h3>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Project Name</dt>
        <dd class="col-sm-10">@Model.ProjectName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("d")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate?.ToString("d") ?? "Ongoing"</dd>

        <dt class="col-sm-2">Manager</dt>
        <dd class="col-sm-10">@Model.Manager?.FirstName @Model.Manager?.LastName</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ProjectID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
