@model IEnumerable<CoreCrewApp.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leave Requests";
}

<h1>Leave Requests</h1>

<table class="table">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Employee?.FirstName @item.Employee?.LastName</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.Reason</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.LeaveRequestID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.LeaveRequestID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.LeaveRequestID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Leave Request</a>
