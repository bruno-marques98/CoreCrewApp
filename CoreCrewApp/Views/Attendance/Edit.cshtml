@model CoreCrewApp.Models.Attendance

@{
    ViewData["Title"] = "Edit Attendance Record";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="AttendanceId" />
    <div class="form-group">
        <label asp-for="Employee.EmployeeID" class="control-label">Employee</label>
        <select asp-for="Employee.EmployeeID" class="form-control" asp-items="ViewBag.EmployeeList"></select>
    </div>
    <div class="form-group">
        <label asp-for="AttendanceStatus" class="control-label">Attendance Status</label>
        <select asp-for="AttendanceStatus" class="form-control">
            <option value="Present">Present</option>
            <option value="Absent">Absent</option>
            <option value="OnLeave">On Leave</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CheckInTime" class="control-label">Check-In Time</label>
        <input asp-for="CheckInTime" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="CheckOutTime" class="control-label">Check-Out Time</label>
        <input asp-for="CheckOutTime" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<a href="@Url.Action("Index", "Attendance")" class="btn btn-secondary">Back to List</a>
