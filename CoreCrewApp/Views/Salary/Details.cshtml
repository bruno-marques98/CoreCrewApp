@model CoreCrewApp.Models.Salary

@{
    ViewData["Title"] = "Salary Details";
}

<h1>Salary Details</h1>

<div>
    <h4>Salary</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Employee ID</dt>
        <dd class="col-sm-10">@Model.EmployeeID</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Effective Date</dt>
        <dd class="col-sm-10">@Model.EffectiveDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate?.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.SalaryID" class="btn btn-primary">Edit</a> |
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
