@model CoreCrewApp.Models.EmployeeRole

@{
    ViewData["Title"] = "Assign Role to Employee";
}

<h2>Assign Role to Employee</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="EmployeeID" class="control-label">Employee</label>
        <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.Employees"></select>
        <span asp-validation-for="EmployeeID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleID" class="control-label">Role</label>
        <select asp-for="RoleID" class="form-control" asp-items="ViewBag.Roles"></select>
        <span asp-validation-for="RoleID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Assign" class="btn btn-success" />
    </div>
</form>

<a href="@Url.Action("Index", "EmployeeRole")" class="btn btn-secondary">Back to List</a>
