@model CoreCrewApp.Models.EmployeeRole

@{
    ViewData["Title"] = "Employee Role Details";
}

<h2>Employee Role Details</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">Employee</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.Employee?.FirstName @Model.Employee?.LastName</p>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Role</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.Role?.RoleName</p>
        </div>
    </div>
</div>

<a href="@Url.Action("Edit", "EmployeeRole", new { employeeId = Model.EmployeeID, roleId = Model.RoleID })" class="btn btn-primary">Edit</a> |
<a href="@Url.Action("Index", "EmployeeRole")" class="btn btn-secondary">Back to List</a>
