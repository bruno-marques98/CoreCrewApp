@model CoreCrewApp.Models.Benefit

@{
    ViewData["Title"] = "Delete Benefit";
}

<h2>Delete Benefit</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Benefit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Cost
        </dt>
        <dd class="col-sm-10">
            @Model.Cost.ToString("C")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BenefitID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="@Url.Action("Index", "Benefit")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
