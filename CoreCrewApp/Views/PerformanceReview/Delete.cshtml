@model CoreCrewApp.Models.PerformanceReview

@{
    ViewData["Title"] = "Delete Performance Review";
}

<h1>Delete Performance Review</h1>

<h3>Are you sure you want to delete this review?</h3>

<div>
    <h4>Performance Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Employee</dt>
        <dd class="col-sm-10">@Model.Employee?.FirstName @Model.Employee?.LastName</dd>

        <dt class="col-sm-2">Review Date</dt>
        <dd class="col-sm-10">@Model.ReviewDate.ToString("d")</dd>

        <dt class="col-sm-2">Review Comments</dt>
        <dd class="col-sm-10">@Model.ReviewComments</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="PerformanceReviewID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
