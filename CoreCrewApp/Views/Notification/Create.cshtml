@model CoreCrewApp.Models.Notification

@{
    ViewData["Title"] = "Create Notification";
}

<h1>Create Notification</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="EmployeeID" class="control-label">Employee</label>
        <select asp-for="EmployeeID" asp-items="ViewBag.EmployeeList" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Message" class="control-label"></label>
        <textarea asp-for="Message" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="IsRead" class="control-label"></label>
        <input asp-for="IsRead" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
