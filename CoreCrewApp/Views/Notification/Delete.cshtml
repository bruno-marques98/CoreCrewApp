@model CoreCrewApp.Models.Notification

@{
    ViewData["Title"] = "Delete Notification";
}

<h1>Delete Notification</h1>

<h3>Are you sure you want to delete this notification?</h3>

<div>
    <h4>Notification</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Employee</dt>
        <dd class="col-sm-10">@Model.Employee?.FirstName @Model.Employee?.LastName</dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.Message</dd>

        <dt class="col-sm-2">Is Read</dt>
        <dd class="col-sm-10">@Model.IsRead</dd>

        <dt class="col-sm-2">Timestamp</dt>
        <dd class="col-sm-10">@Model.Timestamp.ToString("g")</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="NotificationID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
