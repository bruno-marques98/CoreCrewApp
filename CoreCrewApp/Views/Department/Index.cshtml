@model IEnumerable<CoreCrewApp.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmentName</td>
                <td>
                    <a href="@Url.Action("Details", "Department", new { id = item.DepartmentId })" class="btn btn-info">Details</a> |
                    <a href="@Url.Action("Edit", "Department", new { id = item.DepartmentId })" class="btn btn-primary">Edit</a> |
                    <a href="@Url.Action("Delete", "Department", new { id = item.DepartmentId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Department")" class="btn btn-success">Create New Department</a>
