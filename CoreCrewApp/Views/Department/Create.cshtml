@model CoreCrewApp.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<h2>Create Department</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="DepartmentName" class="control-label"></label>
        <input asp-for="DepartmentName" class="form-control" />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
</form>

<a href="@Url.Action("Index", "Department")" class="btn btn-secondary">Back to List</a>
