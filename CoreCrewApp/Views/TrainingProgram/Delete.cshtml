@model CoreCrewApp.Models.TrainingProgram

<h2>Delete Training Program</h2>

<h3>Are you sure you want to delete this training program?</h3>
<div>
    <h4>Training Program</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Program Name</dt>
        <dd class="col-sm-10">@Model.ProgramName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate?.ToShortDateString() ?? "Ongoing"</dd>

        <dt class="col-sm-2">Trainer</dt>
        <dd class="col-sm-10">@Model.Trainer?.FirstName</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TrainingProgramID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
